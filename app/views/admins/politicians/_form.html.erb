<%= form_for @admins_politician, :html => {:class => "form-horizontal center"} do |f| %>
  <% if admins_politician.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(admins_politician.errors.count, "error") %> prohibited this admins_politician from being saved:</p>

      <ul>
      <% admins_politician.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2 control-label" %> 
    <div class="col-md-8">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :party, class: "col-md-2 control-label" %>
      <div class="col-md-2">
        <%= f.select(:party, Admins::Politician.parties.keys.map {|party| [party.titleize, party]}, {include_blank: 'Select party'}, {class: 'form-control'}) %>
      </div>

    </div>
  </div>

  <div class="form-group">
    <%= f.label :twitter, class: "col-md-2 control-label" %>
    <div class="col-md-2">
      <%= f.text_field :twitter, class: "form-control" %>
    </div>
    <%= f.label :facebook, class: "col-md-2 control-label" %>
    <div class="col-md-2">
      <%= f.text_field :facebook, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :twitter_bio, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :twitter_bio, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :twitter_image, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :twitter_image, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :twitter_banner, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :twitter_banner, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.file_field  :avatar, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= image_tag @admins_politician.avatar.url(:thumb) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-2">
      <%= f.submit class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>
