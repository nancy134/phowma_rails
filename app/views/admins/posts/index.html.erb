<p id="notice"><%= notice %></p>

<h1>Admins Posts</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins_posts.each do |admins_post| %>
      <tr>
        <td><%= admins_post.message %></td>
        <td><%= admins_post.image %></td>
        <td><%= link_to 'Show', admins_post %></td>
        <td><%= link_to 'Edit', edit_admins_post_path(admins_post) %></td>
        <td><%= link_to 'Destroy', admins_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

